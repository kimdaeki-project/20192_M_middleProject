<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="restaurantMapper">
<!-- sql -->
	<sql id="bs">
		<choose>
			<when test="kind == 'kt'">
				WHERE title LIKE '%'||#{search}||'%'
			</when>
			<when test="kind == 'kw'">
				WHERE writer LIKE '%'||#{search}||'%'
			</when>
			<otherwise>
				WHERE contents LIKE '%'||#{search}||'%'
			</otherwise>
		</choose>
	</sql>
	
	<resultMap type="RestaurantVO" id="boardFiles">
		<id property="num" column="num"/>
		<result property="title" column="title"/>
		<result property="writer" column="writer"/>
		<result property="contents" column="contents"/>
		<result property="reg_date" column="reg_date"/>
		<result property="hit" column="hit"/>
		<collection property="files" javaType="java.util.List" ofType="FilesVO">
			<id property="fnum" column="fnum"/>
			<result property="fname" column="fname"/>
			<result property="oname" column="oname"/>
		</collection>
	</resultMap>
	
	<!-- 1ê°œ -->
 	<select id="restaurantSelect" resultMap="boardFiles" parameterType="RestaurantVO">
 		SELECT r.*, f.fnum, f.fname, f.oname 
 		FROM restaurant r FULL OUTER JOIN files f
		ON (r.num = f.num)
		WHERE r.num = #{num}
 	</select>
	<select id="restaurantCount" resultType="Integer"
		parameterType="Pager">
		SELECT COUNT(num) FROM restaurant
		<include refid="bs"></include>
	</select>
	<insert id="restaurantWrite" parameterType="RestaurantVO">
		<selectKey order="BEFORE" resultType="Integer" keyProperty="num">
			SELECT restaurant_seq.nextval FROM dual
		</selectKey>
		INSERT INTO restaurant
		VALUES(
		#{num}, #{title}, #{writer}, #{contents}, SYSDATE, 0
		)
	</insert>
	<delete id="restaurantDelete" parameterType="Integer">
 		DELETE restaurant
 		WHERE num = #{num}
 	</delete>
 		<update id="restaurantUpdate" parameterType="RestaurantVO">
 		UPDATE restaurant SET title = #{title}, contents = #{contents}
 		WHERE num = #{num}
 	</update>
 	
</mapper>